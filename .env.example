# Docker Compose Environment Variables

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_chat_db
POSTGRES_PORT=5432

# Backend
BACKEND_PORT=8000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MOCK Services (set to false for production)
USE_MOCK_ASKATT=true
USE_MOCK_ASKDOCS=true
USE_MOCK_AZURE_AD=true

# Azure AD (only needed if USE_MOCK_AZURE_AD=false)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# API Endpoints (only needed if MOCK services are false)
ASKATT_API_URL=https://your-askatt-api.com
ASKDOCS_API_URL=https://your-askdocs-api.com

# Frontend
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8000

# Debug
DEBUG=false
