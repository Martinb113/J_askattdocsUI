# Database Configuration
# PostgreSQL connection string for async operations
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD_HERE@localhost:5432/askdocs_db

# JWT Authentication
# Generate a secure random secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secure-random-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# MOCK Services (for local development without intranet access)
# Set to true to use mock implementations instead of real APIs
USE_MOCK_ASKATT=true
USE_MOCK_ASKDOCS=true
USE_MOCK_AZURE_AD=true

# Azure AD OAuth2 Configuration
# Get these from Azure Portal: https://portal.azure.com
# These are required for AskAT&T API authentication
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_SECRET_ID=your-secret-id-here

# Azure AD OAuth2 URLs and Scopes
# Replace {your-tenant-id} with your actual Azure tenant ID
# Replace {your-api-id} with your actual API application ID
AZURE_AUTH_URL=https://login.microsoftonline.com/{your-tenant-id}/oauth2/v2.0/token
AZURE_SCOPE_ASKATT_GENERAL=api://{your-api-id}/.default
# Note: Client credential flows require /.default suffix (per Azure AD error AADSTS1002012)
AZURE_SCOPE_ASKATT_DOMAIN=api://{your-api-id}/.default

# AskAT&T API Configuration
# Internal API endpoints - get these from your API gateway administrator
ASKATT_API_BASE_URL_STAGE=https://your-api-gateway-url/stage/domain-services/chat-generativeai
ASKATT_API_BASE_URL_PRODUCTION=https://your-api-gateway-url/prod/domain-services/chat-generativeai
ASKATT_DOMAIN_NAME=GenerativeAI
ASKATT_MODEL_NAME=gpt-4o
ASKATT_MAX_TOKENS=800

# AskDocs API Base URLs
# These endpoints are for the AskDocs RAG service
# Format: https://your-api-gateway-url/path/to/askdocs
ASKDOCS_API_BASE_URL_STAGE=https://your-api-gateway-url/stage/askdocs/query
ASKDOCS_API_BASE_URL_PRODUCTION=https://your-api-gateway-url/prod/askdocs/query

# AskDocs Configuration API Endpoints (for fetching domain configurations)
# Full endpoint will be: {base_url}/admin/v2/list-config-by-domain
ASKDOCS_CONFIG_API_STAGE=https://stage-api.askdocs.com
ASKDOCS_CONFIG_API_PRODUCTION=https://api.askdocs.com

# CORS Configuration
# Comma-separated list of allowed origins
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
